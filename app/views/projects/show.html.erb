<!--show view -->
<!--shows the result a project -->
<!--Read, Edit and Delete of CRUD for projects -->

<h2><%= @project.name %></h2>
<p><strong>Seasonal Produce: </strong><%= @project.season %></p>
<p><strong>Category: </strong><%= @project.category %></p>

<hr>


<!--Edit button - to link to the edit page (edit.htmll.erb) 
to edit the project -->
<%= link_to "Edit", edit_project_path(@project), :class => 'btn btn-success' %>

<!--Delete button - with a delete confirmation dialog box warning when delete is activated -->
<%= link_to "Delete", project_path(@project), 
            method: :delete,
            data: {confirm: 'Are you sure?'},
            :class => 'btn btn-danger' %>

<hr>

<!--links to partial views (to read code from partial files _comments and _form under tasks) -->
<%= render 'tasks/tasks' %>
<%= render 'tasks/form' %>
